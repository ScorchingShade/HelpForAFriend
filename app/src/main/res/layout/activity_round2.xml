<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:id="@+id/Round2Layout"
    tools:context="com.ankushinc.thereddragon.helpingshinchan.Index_Activity">

    <!--sorry phle meine bht late kiya, This here is the coded xml file follow it thoroughly,
    go in the res>values>styles xml to see the code for the theme
    copy my color.xml file to yours, it contains custom colors for your future use bruh
    -->


    <TextView
        android:id="@+id/Round2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Round 2"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Player1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/Round2"
        android:layout_marginTop="15dp"
        android:text="Player1"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/Player2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/Round2"
        android:layout_marginTop="15dp"
        android:text="Player2"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TableLayout
        android:id="@+id/TableL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Player1">

        <TableRow
            android:id="@+id/row1"
            android:layout_marginTop="30dp">

            <Button
                android:id="@+id/onePt"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="+1"
                android:textSize="20sp" />

            <Button
                android:id="@+id/TwoPt"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:text="+2"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:id="@+id/row2"
            android:layout_marginTop="30dp">

            <Button
                android:id="@+id/threePt"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="+3"
                android:textSize="20sp" />

            <Button
                android:id="@+id/fivePt"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:text="+5"
                android:textSize="20sp" />
        </TableRow>


    </TableLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_above="@+id/reset"
        android:layout_below="@+id/Round2"
        android:layout_marginLeft="170dp"
        android:background="@android:color/black" />


    <TableLayout
        android:id="@+id/TableR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/Player2">

        <TableRow
            android:id="@+id/row1R"
            android:layout_marginTop="30dp">

            <Button
                android:id="@+id/onePtR"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="+1"
                android:textSize="20sp" />

            <Button
                android:id="@+id/TwoPtR"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:text="+2"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:id="@+id/row2R"
            android:layout_marginTop="30dp">

            <Button
                android:id="@+id/threePtR"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="+3"
                android:textSize="20sp" />

            <Button
                android:id="@+id/fivePtR"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:text="+5"
                android:textSize="20sp" />
        </TableRow>


    </TableLayout>

    <Button
        android:id="@+id/reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TableR"
        android:layout_marginTop="50dp"
        android:text="Reset"
        android:textSize="20dp" />

    <Button
        android:id="@+id/Results"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reset"
        android:layout_marginTop="10dp"
        android:text="Results"
        android:textSize="20dp" />
</RelativeLayout>
